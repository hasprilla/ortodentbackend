<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    ### SOLUCIÓN AL ERROR 404 ###
    # Redirige todas las solicitudes al front controller (index.php)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    ### Configuración para API REST ###
    # Maneja el header 'Authorization' (necesario para Sanctum)
    RewriteCond %{HTTP:Authorization} ^(.*)
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%1]

    ### Seguridad ###
    # Bloquea acceso a archivos sensibles
    <FilesMatch "\.(env|log|sql)$">
        Order allow,deny
        Deny from all
    </FilesMatch>

    # Headers de seguridad para API
    <IfModule mod_headers.c>
        Header set X-Content-Type-Options "nosniff"
        Header set X-Frame-Options "DENY"
        Header set X-XSS-Protection "1; mode=block"
        Header set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" env=HTTPS
    </IfModule>

</IfModule>

### Configuración CORS para API

<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header set Access-Control-Allow-Credentials "true"
    Header unset X-Powered-By
    Header always unset X-Powered-By
    Header unset Server
    Header always unset Server
</IfModule>

### Optimización

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
</IfModule>
